<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_man_job_tree" model="ir.ui.view">
        <field name="name">man.job.tree</field>
        <field name="model">man.job</field>
        <field name="arch" type="xml">
            <tree>
                <field name="job"/>
            </tree>
        </field>
    </record>

    <record id="view_man_job_form" model="ir.ui.view">
        <field name="name">man.job.form</field>
        <field name="model">man.job</field>
        <field name="arch" type="xml">
            <form string="Job Master">
                <sheet>
                    <field name="job"/>
                    <!--<group>
                        <field name="date_of_joining"/>
                        <field name="notes"/>
                    </group>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_job_details" model="ir.actions.act_window">
        <field name="name">Job Details</field>
        <field name="res_model">man.job</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>