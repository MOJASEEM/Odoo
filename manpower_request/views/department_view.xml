<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Department -->
    <record id="view_man_department_tree" model="ir.ui.view">
        <field name="name">Departments</field>
        <field name="model">manpower_request.department</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="department"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Department -->
    <record id="view_man_department_form" model="ir.ui.view">
        <field name="name">manpower_request.department.form</field>
        <field name="model">manpower_request.department</field>
        <field name="arch" type="xml">
            <form string="Department Master">
                <sheet>
                    <group>
                        <field name="department"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action for Department Details -->
    <record id="action_dep_details" model="ir.actions.act_window">
        <field name="name">Department Details</field>
        <field name="res_model">manpower_request.department</field>
        <field name="view_mode">tree,form</field>
        <!-- Linking to the views -->
        <field name="view_id" ref="view_man_department_tree"/>
        <field name="context">{}</field>  <!-- Optional, you can remove if not needed -->
    </record>
</odoo>
