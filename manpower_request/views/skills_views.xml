<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_man_skill_tree" model="ir.ui.view">
        <field name="name">man.skill.tree</field>
        <field name="model">man.skill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="skill"/>
            </tree>
        </field>
    </record>

    <record id="view_man_skill_form" model="ir.ui.view">
        <field name="name">man.skill.form</field>
        <field name="model">man.skill</field>
        <field name="arch" type="xml">
            <form string="Skill Master">
                <sheet>
                    <group>
                       <field name="skill"/>
                        <!--<field name="request_id"/>-->

                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_skill_details" model="ir.actions.act_window">
        <field name="name">skills Model</field>
        <field name="res_model">man.skill</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>