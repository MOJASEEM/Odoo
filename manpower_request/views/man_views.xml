<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_man_model_tree" model="ir.ui.view">
        <field name="name">man.model.tree</field>
        <field name="model">man.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="department"/>
                <field name="no_of_employee"/>
                <field name="job"/>
                <field name="experience"/>
                <field name="qual"/>
                <field name="employee_type"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_man_model_form" model="ir.ui.view">
        <field name="name">man.model.form</field>
        <field name="model">man.model</field>
        <field name="arch" type="xml">
            <form string="Man Power Request">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"/>
                    <button name="action_ongoing" type="object" string="Ongoing"/>
                    <button name="action_done" type="object" string="Done"/>
                    <button name="action_cancel" type="object" string="Cancel"/>
                    <button name="action_reset_draft" type="object" class="oe_highlight" string="Reset To Draft" invisible="state=='draft'"/>
                    <button name="action_download_pdf" type="object" string="Download PDF" class="btn-secondary" icon="fa-file-pdf-o"/>
                    <button name="action_export_excel" type="object" string="Download Excel"
                            icon="fa-download" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="department"/>
                        <field name="no_of_employee"/>
                        <field name="job"/>
                        <field name="experience"/>
                        <field name="qual" widget="many2many_tags"/>
                        <field name="employee_type" widget="radio"/>
                       <!-- <field name="skill"/>-->

                    </group>
                   <notebook>
                       <page name="skill" string="Skills">
                           <field name="skill_line">
                               <tree editable="bottom">
                                    <field name="skill_id" widget="many2one_tags"/>
                                    <field name="level" />
                               </tree>
                          </field>
                       </page>
                   </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_man_generation" model="ir.actions.act_window">
        <field name="name">Man Model</field>
        <field name="res_model">man.model</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_man_model_tree"/>
        <!--<field name="context">{}</field>-->
    </record>
     <record id="seq_man_model" model="ir.sequence">
        <field name="name">Man Model Sequence</field>
        <field name="code">man.model</field>
        <field name="prefix">REQ/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
        <field name="implementation">standard</field>
    </record>
    <report
        id="action_report_manpower_form"
        model="res.config.settings"
        string="Manpower Request PDF"
        report_type="qweb-pdf"
        file="manpower_request.manpower_report_template"
        name="manpower_request.manpower_report_template"
    />

</odoo>

